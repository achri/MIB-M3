.table {
		border-collapse:collapse;
		background:#EFF4FB url(../images/teaser.gif) repeat-x;
		border-left:1px solid #99CCFF; /*#686868;*/
		border-right:1px solid #99CCFF; /*#686868;*/
		font:0.8em/145% 'Trebuchet MS',helvetica,arial,verdana;
		color: #333;
}

.table td,.table th {
		padding:5px;
		border-left:1px solid #99CCFF;
		border-right:1px solid #99CCFF;
}

/* =body
----------------------------------------------- */
.table th, .table tbody td {
		/*border-bottom: dotted 1px #333;*/
		border-bottom: 1px solid #99CCFF;
}

.table th {
		white-space: nowrap;
}

.table th a {
		color:#333;
}

.table .x:hover {
		background:#00CCFF; /*#fafafa*/
}

.ui-datepicker{
	font-size:8pt;
}

/* = header pr, rfq, mr
	------------------------------------------- */

.headers {
	padding: 2px;
	border: #00CCFF solid 2px;
	color:#fff;
	width: 85%;
}